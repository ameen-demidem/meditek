<p id="notice"><%= notice %></p>

<h1>Listing Encounters</h1>

<table>
  <thead>
    <tr>
      <th>Visit</th>
      <th>Admitted at</th>
      <th>Discharged at</th>
      <th>Location</th>
      <th>Room</th>
      <th>Bed</th>
      <th>Patient</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @encounters.each do |encounter| %>
      <tr>
        <td><%= encounter.visit %></td>
        <td><%= encounter.admitted_at %></td>
        <td><%= encounter.discharged_at %></td>
        <td><%= encounter.location %></td>
        <td><%= encounter.room %></td>
        <td><%= encounter.bed %></td>
        <td><%= encounter.patient %></td>
        <td><%= link_to 'Show', [@patient, encounter] %></td>
        <td><%= link_to 'Edit', edit_patient_encounter_path(@patient, encounter) %></td>
        <td><%= link_to 'Destroy', [@patient, encounter], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

